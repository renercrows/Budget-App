<div class="container-fluid w-100 d-flex flex-column align-items-center mt-5">
  <h1>Create a new transaction:</h1>
  <%= form_with model: @entity, url: entities_path, method: :post, :html => {:class => "w-75 mt-4"} do |form| %>
    <div class="form-floating mb-3 w-100">
      <%= form.text_field :name, class:"form-control", id:"floatingInput", placeholder:"Transaction name", required: true %>
      <%= form.label :name, 'Name', class: "form-label" %>
    </div>
    <div class="form-floating mb-3 w-100">
      <%= form.number_field :amount, class:"form-control", id:"floatingInput", placeholder:"Transaction amount", required: true  %>
      <%= form.label :amount, 'Amount', class: "form-label" %>
    </div>
    <%= form.label :group_id, 'Please select a category:', class: "form-label" %>
    <%= form.select :group_id, Group.order(:name).where(user:current_user).pluck(:name, :id), {}, {:multiple => true, required:true, :id => "groups", :class => "form-select mb-3" } %>
    <%= form.submit 'Create transaction', class: "btn btn-outline-success text-black" %>
  <% end %>
</div>