<% if flash[:notice] %>
  <div class="alert alert-info mt-4 container-fluid w-50 d-flex flex-column align-items-center" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-warning mt-4 container-fluid w-50 d-flex flex-column align-items-center" role="alert">
    <%= flash[:alert] %>
  </div>
<% end %>